{
  "name": "mdBook Auto Theme",
  "description": "ðŸŽ¨ A browser extension for automatically applying themes on websites generated by mdBook.",
  "version": "1.0.0",
  "manifest_version": 2,
  "content_scripts": [{
    "matches": ["*://*/*"],
    "run_at": "document_idle",
    "js": ["page.js"]
  }],
  "permissions": [
    "storage",
    "*://*/*"
  ],
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "browser_action": {
    "default_popup": "settings.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{e9884c5e-c30e-4ecb-b152-7ecb7a7d0972}"
    }
  }
}
